.container
  .page-header
    %h1 Sign In Page
  .form-horizontal
    =form_tag url: sign_in_path do |f|
      .form-group
        =label_tag :email
        =email_field_tag :email
      .form-group
        =label_tag :password
        =password_field_tag :password
      .form-group
        =submit_tag 'Sign In', class: 'btn btn-primary'
